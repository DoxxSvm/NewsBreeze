<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="#E8E8F7"
        android:id="@+id/view"
        app:cardCornerRadius="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="200dp"
        android:id="@+id/card"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo"/>

    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/queen"
        android:id="@+id/title"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="5sp"
        android:text="adfasdfas asefagsasf"
        android:maxLines="2"/>
    <TextView
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:fontFamily="@font/queen_bold"
        android:id="@+id/desc"
        android:lineSpacingExtra="5sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="adfasdfas asefagsasf"
        android:maxLines="3"/>
    <TextView
        android:id="@+id/date"
        android:textColor="@color/grey"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="adfasdfas asefagsasf" />
    <com.google.android.material.button.MaterialButton
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date"
        android:layout_marginStart="60dp"
        android:layout_width="100dp"
        app:cornerRadius="7dp"
        android:layout_height="40dp"
        android:textAllCaps="false"
        android:text="Read"
        android:textSize="12sp"
        android:textAlignment="center"
        android:backgroundTint="#94C77D"
        android:id="@+id/read"/>
    <com.google.android.material.button.MaterialButton
        android:backgroundTint="#94C77D"
        android:text="Save"
        app:cornerRadius="7dp"
        android:padding="5dp"
        android:textSize="12sp"
        android:textAlignment="center"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date"
        android:layout_marginEnd="60dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/save"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_save_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="2dp"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="#C1C0BC"
        android:layout_marginEnd="37dp">
        <ImageView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/saveee"/>
    </com.google.android.material.card.MaterialCardView>




</androidx.constraintlayout.widget.ConstraintLayout>